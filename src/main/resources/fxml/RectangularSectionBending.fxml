<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.concrete_calculator.controllers.RectangularSectionBendingController">
   <children>
      <GridPane>
         <children>
            <Label text="Material" GridPane.columnIndex="3">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <opaqueInsets>
                  <Insets top="10.0" />
               </opaqueInsets>
            </Label>
            <Label text="Concrete" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label text="Steel" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <Label text="Geometry">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label text="Width" GridPane.rowIndex="1" />
            <ComboBox fx:id="concreteClassComboBox" prefWidth="150.0" GridPane.columnIndex="4" GridPane.rowIndex="1" />
            <ComboBox fx:id="steelClassComboBox" prefWidth="150.0" GridPane.columnIndex="4" GridPane.rowIndex="2" />
            <TextField fx:id="widthTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="heightTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Height" GridPane.rowIndex="2" />
            <Label text="Forces" GridPane.columnIndex="3" GridPane.rowIndex="3">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label text="Bending moment" GridPane.columnIndex="3" GridPane.rowIndex="4" />
            <TextField fx:id="bendingMomentTextField" GridPane.columnIndex="4" GridPane.rowIndex="4" />
            <Label text="Reinforcement" GridPane.rowIndex="3">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label text="Main bars (bottom)" GridPane.rowIndex="4" />
            <Label text="Stirrups" GridPane.rowIndex="6" />
            <Label text="Bars coverage (bottom)" GridPane.rowIndex="7" />
            <ComboBox fx:id="bottomMainBarsComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="stirrupsComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <TextField fx:id="bottomCoverageTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <Label text="Bars coverage (top)" GridPane.rowIndex="8" />
            <Label text="Main bars (top)" GridPane.rowIndex="5" />
            <TextField fx:id="topCoverageTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <ComboBox fx:id="topMainBarsComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="130.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
      <Button fx:id="calculateButton" alignment="CENTER" mnemonicParsing="false" onAction="#calculateBending" text="Calculate">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
