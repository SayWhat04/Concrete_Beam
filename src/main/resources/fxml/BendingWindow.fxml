<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="bendingBorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.concrete_calculator.controllers.BendingWindowController">
   <top>
      <HBox prefHeight="0.0" prefWidth="500.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton mnemonicParsing="false" onAction="#openRectangularSectionBending" text="%rectangular.section">
               <toggleGroup>
                  <ToggleGroup fx:id="sectionTypeToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" onAction="#openTSectionBending" text="%t.section" toggleGroup="$sectionTypeToggleGroup" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
