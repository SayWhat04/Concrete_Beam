<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.concrete_calculator.controllers.RectangularSectionShearController">
    <children>
        <GridPane>
            <children>
                <Label text="%geometry">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label text="%width" GridPane.rowIndex="1"/>
                <Label text="%height" GridPane.rowIndex="2"/>
                <Label text="%reinforcement" GridPane.rowIndex="3">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label text="%bottom.bars.diameter" GridPane.rowIndex="4"/>
                <Label text="%bottom.bars.quantity" GridPane.rowIndex="5"/>
                <Label text="%top.bars.diameter" GridPane.rowIndex="6"/>
                <Label text="%top.bars.quantity" GridPane.rowIndex="7"/>
                <Label text="%stirrups.diameter" GridPane.rowIndex="8"/>
                <Label text="%number.of.stirrup.arms" GridPane.rowIndex="9"/>
                <Label text="%bottom.coverage" GridPane.rowIndex="10"/>
                <Label text="%top.coverage" GridPane.rowIndex="11"/>
                <Label text="%results" GridPane.rowIndex="12">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label text="%bottom.calculated.reinforcement" GridPane.rowIndex="13"/>
                <Label text="%stirrups.span" GridPane.rowIndex="14"/>

                <TextField fx:id="widthTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="heightTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <ComboBox fx:id="bottomMainBarsComboBox" prefWidth="150.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="4"/>

                <TextField fx:id="bottomBarsQuantityTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <ComboBox fx:id="topMainBarsComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <TextField fx:id="topBarsQuantityTextField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <ComboBox fx:id="stirrupsComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                <TextField fx:id="stirrupArmsTextField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
                <TextField fx:id="bottomCoverageTextField" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
                <TextField fx:id="topCoverageTextField" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

                <Label text="%theta.angle" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Label text="%length" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <Label text="%material" GridPane.columnIndex="3" GridPane.rowIndex="3">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets top="10.0"/>
                    </opaqueInsets>
                </Label>
                <Label text="%concrete" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
                <Label text="%steel" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
                <Label text="%forces" GridPane.columnIndex="3" GridPane.rowIndex="6">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label text="%axial.force" GridPane.columnIndex="3" GridPane.rowIndex="7"/>
                <Label text="%shear.force" GridPane.columnIndex="3" GridPane.rowIndex="8"/>
                <Label text="%top.calculated.reinforcement" GridPane.columnIndex="3" GridPane.rowIndex="13"/>

                <TextField fx:id="thetaAngleTextField" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                <TextField fx:id="lengthTextField" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
                <ComboBox fx:id="concreteClassComboBox" prefWidth="150.0" GridPane.columnIndex="4"
                          GridPane.rowIndex="4"/>
                <ComboBox fx:id="steelClassComboBox" prefWidth="150.0" GridPane.columnIndex="4" GridPane.rowIndex="5"/>
                <TextField fx:id="axialForceTextField" GridPane.columnIndex="4" GridPane.rowIndex="7"/>
                <TextField fx:id="shearForceTextField" GridPane.columnIndex="4" GridPane.rowIndex="8"/>

                <TextField fx:id="bottomCalculatedReinforcementTextField" editable="false" GridPane.columnIndex="1"
                           GridPane.rowIndex="13"/>
                <TextField fx:id="stirrupsTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="14"/>
                <TextField fx:id="topCalculatedReinforcementTextField" editable="false" GridPane.columnIndex="4"
                           GridPane.rowIndex="13"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="160.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="85.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="85.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
        <Button fx:id="calculateButton" alignment="CENTER" mnemonicParsing="false" onAction="#calculateShear"
                text="%calculate">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
